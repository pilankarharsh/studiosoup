</Layout>

<style>
  .services-hero {
    background: linear-gradient(135deg, var(--color-black) 0%, var(--color-gray-900) 100%);
    padding: 4rem 0;
    color: var(--color-white);
  }

  .services-hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--color-gray-300);
    line-height: 1.6;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .services-section {
    padding: 4rem 0;
    background: var(--color-white);
  }

  .section-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    color: var(--color-black);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .service-card {
    background: var(--color-white);
    border: 1px solid var(--color-gray-200);
    border-radius: 8px;
    padding: 2rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .service-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-black);
  }

  .service-description {
    color: var(--color-gray-600);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .service-features {
    margin-bottom: 1.5rem;
  }

  .service-features h4 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-black);
  }

  .service-features ul {
    list-style: none;
    padding: 0;
  }

  .service-features li {
    color: var(--color-gray-600);
    padding: 0.25rem 0;
    position: relative;
    padding-left: 1.5rem;
  }

  .service-features li::before {
    content: "‚úì";
    position: absolute;
    left: 0;
    color: var(--color-black);
    font-weight: bold;
  }

  .service-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: var(--color-gray-50);
    border-radius: 4px;
  }

  .meta-item {
    display: flex;
    flex-direction: column;
  }

  .meta-label {
    font-size: 0.8rem;
    color: var(--color-gray-500);
  }

  .meta-value {
    font-weight: 600;
    color: var(--color-black);
  }

  .service-cta {
    background: var(--color-black);
    color: var(--color-white);
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .service-cta:hover {
    background: var(--color-gray-800);
  }

  .process-section {
    padding: 4rem 0;
    background: var(--color-gray-50);
  }

  .process-timeline {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .process-step {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
    position: relative;
  }

  .step-number {
    background: var(--color-black);
    color: var(--color-white);
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .step-content h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: var(--color-black);
  }

  .step-content p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .step-connector {
    position: absolute;
    left: 25px;
    top: 50px;
    width: 2px;
    height: 2rem;
    background: var(--color-gray-300);
  }

  .why-choose-section {
    padding: 4rem 0;
    background: var(--color-white);
  }

  .reasons-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .reason-card {
    text-align: center;
    padding: 2rem;
    border-radius: 8px;
    transition: transform 0.3s ease;
  }

  .reason-card:hover {
    transform: translateY(-5px);
  }

  .reason-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .reason-card h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-black);
  }

  .reason-card p {
    color: var(--color-gray-600);
    line-height: 1.6;
  }

  .cta-section {
    padding: 4rem 0;
    background: var(--color-black);
    text-align: center;
    color: var(--color-white);
  }

  .cta-content h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .cta-content p {
    font-size: 1.1rem;
    color: var(--color-gray-300);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: 1rem 2rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .cta-button.primary {
    background: var(--color-white);
    color: var(--color-black);
  }

  .cta-button.primary:hover {
    background: var(--color-gray-100);
  }

  .cta-button.secondary {
    background: transparent;
    color: var(--color-white);
    border: 2px solid var(--color-white);
  }

  .cta-button.secondary:hover {
    background: var(--color-white);
    color: var(--color-black);
  }

  @media (max-width: 768px) {
    .services-hero .container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .services-grid {
      grid-template-columns: 1fr;
    }

    .service-meta {
      flex-direction: column;
      gap: 1rem;
    }

    .process-step {
      flex-direction: column;
      text-align: center;
    }

    .step-connector {
      display: none;
    }

    .reasons-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
  }
</style> 